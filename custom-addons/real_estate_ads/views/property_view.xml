<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_property_view_offers" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">treeform</field>
            <field name="domain">[('property_id', '=', active_id)]</field>
        </record>

        <!-- Search View -->

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="post_code"/>
                    <field name="tag_id"/>
                    <field name="buyer_id"/>
                    <filter string="Sold" name="sold_state" domain="[('state', '=', 'sold')]"/>
                    <filter string="New" name="new_state" domain="[('state', '=', 'new')]"/>
                    <filter string="Accepted" name="accepted_state" domain="[('state', '=', 'accepted')]"/>
                    <filter string="Cancelled" name="cancelled_state" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    </group>
<!--                    <searchpanel>-->
<!--                        <field name="state" icon="fa-filter" groupby="group_by_state" limit="0"/>-->
<!--                    </searchpanel>-->
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="estate_property_kanban_view" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" on_create="quick_create" quick_create_view="real_estate_ads.quick_create_estate_property_form_view">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe-kanban-details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="offer_count"/> Offer(s)
                                    </div>
                                </div>
                            </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Kanban Quick Create Form -->
        <record id="quick_create_estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="estate_property_pivot_view" model="ir.ui.view">
            <field name="name">estate.property.pivot</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="name" type="row"/>
                    <field name="selling_price" type="measure"/>
                    <field name="expected_price" type="measure"/>
                    <field name="bedrooms" type="measure"/>
                    <field name="facades" type="measure"/>
<!--                    <field name="garage" type="measure"/>-->
                </pivot>
            </field>
        </record>

        <!-- Graph View -->
        <record id="estate_property_graph_view" model="ir.ui.view">
            <field name="name">estate.property.graph</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="name"/>
                    <field name="selling_price"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="facades"/>
<!--                    <field name="garage" type="measure"/>-->
                </graph>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="estate_property_calendar_view" model="ir.ui.view">
            <field name="name">estate.property.calendar</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <calendar date_start="date_availability" string="Properties" mode="month" event_open_popup="true" quick_add="false">
                    <field name="name"/>
                    <field name="date_availability"/>
                </calendar>
            </field>
        </record>

        <!-- Tree view -->
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="post_code"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="accept_offer" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="reject_offer" type="object" string="Cancel" class="btn btn-danger"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
<!--                            <button class="oe_stat_button" name="%(real_estate_ads.action_property_view_offers)d" type="action">-->
<!--                                <field name="offer_count" string="Offers" widget="statinfo"/>-->
<!--                            </button>-->
                            <button class="oe_stat_button" name="action_property_view_offers" type="object" icon="fa-handshake-o">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
<!--                            <button class="oe_stat_button" name="action_client_action" type="object">-->
<!--                                <field name="offer_count" string="Testing Client" widget="statinfo"/>-->
<!--                            </button>-->
                            <button class="oe_stat_button" name="action_url_action" type="object">
                                <i class="fa fa-external-link"/>Visit Odoo
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <group>
                                <field name="type_id"/>
                                <field name="post_code"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Description">
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page name="Offers">
                                <field name="offer_ids">
                                    <tree editable="bottom">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        # partner
                                        <field name="creation_date"/>
                                        <field name="validity"/>
                                        <field name="deadline"/>
                                        <field name="status" nolabel="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="sales_id"/>
                                    <field name="buyer_id"/>
                                    <field name="phone"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban,tree,pivot,graph,calendar,form</field>
            <field name="view_id" ref="estate_property_kanban_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

        <!-- Server Action -->
        <record id="action_extend_offer_deadline" model="ir.actions.server">
            <field name="name">Extend Deadline</field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="real_estate_ads.model_estate_property_offer"/>
            <field name="binding_view_types">list,form</field>
            <field name="code">
                action = model.extend_offer_deadline()
            </field>
        </record>

        # For creating a custom action first provide an action definition with the custom tag.
        <record id="action_custom_client_action" model="ir.actions.client">
            <field name="name">Custom Client Action</field>
            <field name="tag">custom_client_action</field>
        </record>

        <!-- Cron Job -->
        <record id="ir_cron_extend_offer_deadline" model="ir.cron">
            <field name="name">Offers: Extend Deadline Everyday</field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer"/>
            <field name="state">code</field>
            <field name="code">
               model._extend_offer_deadline()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
<!--            <field name="active" eval="False"/>-->
            <field name="doall" eval=""/>
        </record>
    </data>
</odoo>

